<?xml version="1.0" encoding="utf-8"?>

<extension version="3.1" type="template" client="site">
	<name>SP_PB_Template</name>
	<description> TPL_SP_PB_TEMPLATE_XML_DESCRIPTION</description>
	<version>0.1.1</version>
	<creationDate>7/10/2022</creationDate> <!--10 июля 2022г-->
	<author>ILGIZ KHUZHAHMETOV</author>
	<authorEmail>ilgiz-87@mail.ru</authorEmail>
	<authorUrl>mlz102.ru</authorUrl>
	<copyright>(C) 2022 MLZ-102</copyright>
	
	<files>

		<filename>index.php</filename>
		<filename>index.html</filename>
		<filename>templateDetails.xml</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>

		<folder>html</folder>
		<folder>css</folder>
		<folder>scss</folder>
		<folder>images</folder>
		<folder>js</folder>
		<folder>language</folder>
	
		
	</files>
	<positions>
		<position>header</position>
		<position>debug</position>
		<position>footer</position>
	</positions>
	<languages folder="language">
	    <language tag="ru-RU">ru-RU/ru-RU.tpl_SP_PB_Template.ini</language>
		<language tag="ru-RU">ru-RU/ru-RU.tpl_SP_PB_Template.sys.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_SP_PB_Template.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_SP_PB_Template.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="advanced">

				<field
					name="logoFile"
					type="media"
					label="TPL_SP_PB_TEMPLATE_LOGO_LABEL"
					description="TPL_SP_PB_TEMPLATE_LOGO_DESC"
					class=""
					default=""
				/>

				<field
					name="sitetitle"
					type="text"
					label="JGLOBAL_TITLE"
					description="JFIELD_ALT_PAGE_TITLE_LABEL"
					default=""
					filter="string"
				/>

				<field
					name="sitedescription"
					type="text"
					label="JGLOBAL_DESCRIPTION"
					description="JGLOBAL_SUBHEADING_DESC"
					default=""
					filter="string"
				/>
				
			

			</fieldset>
		</fields>
	</config>
</extension>
